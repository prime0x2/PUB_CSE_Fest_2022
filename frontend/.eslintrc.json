{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react"],
	"ignorePatterns": ["*.config.js"],
	"rules": {
		"linebreak-style": ["error", "windows"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"react/react-in-jsx-scope": "off",
		"react/no-unknown-property": "off",
		"react/prop-types": "off"
	}
}
